# 示例 hyprlock 配置文件
# 更多配置选项请参考：https://wiki.hyprland.org/Hypr-Ecosystem/hyprlock
#
# 所有组件中的渲染文本支持 Pango 标记（例如 <b> 粗体 或 <i> 斜体 标签）
# 参考文档：https://wiki.hyprland.org/Hypr-Ecosystem/hyprlock/#general-remarks
#
# 清除密码输入缓冲区的快捷键：ESC、Ctrl+U、Ctrl+Backspace
#
# 你可以将此配置复制到 ~/.config/hypr/hyprlock.conf 来开始使用
#

$font = JetBrains Mono Thi

general {
    # 不隐藏鼠标光标（设为 true 则无操作时自动隐藏）
    hide_cursor = false
}

# 取消注释以启用指纹认证
# auth {
#     fingerprint {
#         enabled = true
#         ready_message = 请扫描指纹解锁
#         present_message = 正在扫描...
#         retry_delay = 250 # 重试延迟（单位：毫秒）
#     }
# }

# 动画相关配置
animations {
    enabled = true                    # 启用动画效果
    bezier = linear, 1, 1, 0, 0       # 贝塞尔曲线（线性过渡）
    animation = fadeIn, 1, 5, linear  # 淡入动画：时长1，步长5，线性
    animation = fadeOut, 1, 5, linear # 淡出动画：时长1，步长5，线性
    animation = inputFieldDots, 1, 2, linear # 输入框圆点动画：时长1，步长2，线性
}

# 背景配置
background {
    monitor =eDp-2                    # 适用显示器（留空表示所有显示器）
    path = /home/yiqiu/Pictures/1.png
    blur_passes = 2                   # 背景模糊次数（数值越大模糊效果越强）
    scale = cover                     # 0.9.2必需！自适应屏幕，防止图片不渲染
    position = center                 # 0.9.2必需！居中显示
}

# 密码输入框配置
input-field {
    monitor =                         # 适用显示器（留空表示所有显示器）
    size = 20%, 5%                    # 输入框尺寸：宽度20%，高度5%
    outline_thickness = 3             # 输入框边框厚度
    inner_color = rgba(0, 0, 0, 0.0)  # 输入框内部填充色：完全透明（无填充）

    # 正常状态下的边框渐变颜色（45度角）
    outer_color = rgba(33ccffee) rgba(00ff99ee) 45deg
    # 密码验证中的边框渐变颜色（120度角）
    check_color = rgba(00ff99ee) rgba(ff6633ee) 120deg
    # 密码验证失败的边框渐变颜色（40度角）
    fail_color = rgba(ff6633ee) rgba(ff0066ee) 40deg

    font_color = rgb(143, 143, 143)   # 输入框字体颜色
    fade_on_empty = false             # 空输入时不淡化输入框
    rounding = 15                     # 输入框圆角半径

    font_family = $font               # 输入框字体（引用上方定义的 $font 变量）
    placeholder_text = 请输入密码...  # 输入框占位提示文本
    fail_text = $PAMFAIL              # 验证失败提示文本（自动读取 PAM 失败信息）

    # 取消注释以使用星号（*）代替圆点显示已输入的密码长度
    # dots_text_format = *
    # dots_size = 0.4                 # 密码圆点/星号的大小比例
    dots_spacing = 0.3                # 密码圆点/星号的间距比例

    # 取消注释以隐藏密码输入长度（类似 swaylock 的输入提示样式）
    # hide_input = true

    position = 0, -20                 # 输入框位置偏移：X=0，Y=-20
    halign = center                   # 水平对齐方式：居中
    valign = center                   # 垂直对齐方式：居中
}

# 时间显示标签
label {
    monitor =eDP-2                         # 适用显示器（留空表示所有显示器）
    # 显示文本：当前时间（变量），变量说明参考：https://wiki.hyprland.org/Hypr-Ecosystem/hyprlock/#variable-substitution
    text = $TIME
    font_size = 90                    # 时间字体大小
    font_family = $font               # 时间字体

    position = -30, 0                 # 位置偏移：X=-30，Y=0
    halign = right                    # 水平对齐：右对齐
    valign = top                      # 垂直对齐：顶部
}

# 日期显示标签
label {
    monitor =                         # 适用显示器（留空表示所有显示器）
    # 显示文本：执行命令获取日期（每60000毫秒/1分钟更新一次）
    text = cmd[update:60000] date +"%A, %d %B %Y"
    font_size = 15                    # 日期字体大小
    font_family = $font               # 日期字体

    position = -30, -150              # 位置偏移：X=-30，Y=-150
    halign = right                    # 水平对齐：右对齐
    valign = top                      # 垂直对齐：顶部
}

# 键盘布局切换标签
label {
    monitor =                         # 适用显示器（留空表示所有显示器）
    text = $LAYOUT[en,ru]             # 显示当前键盘布局（仅显示英/俄文布局标识）
    font_size = 24                    # 布局字体大小
    onclick = hyprctl switchxkblayout all next # 点击事件：切换所有显示器的键盘布局到下一个

    position = 250, -20               # 位置偏移：X=250，Y=-20
    halign = center                   # 水平对齐：居中
    valign = center                   # 垂直对齐：居中
}
